{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "types": [
          "node"
      ]
  },
  "include": [
      "src/**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "src/**/*.spec.ts"
  ]
}